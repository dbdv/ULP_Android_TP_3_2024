<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp"
    >
    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Back"
        android:drawableLeft="@drawable/left_arrow_icon_20"
        android:textAllCaps="true"
        android:layout_marginBottom="25sp"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/main_color"
        android:padding="0sp"
        ></Button>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/spiderman_cover"
        android:adjustViewBounds="true"
        android:layout_marginTop="20sp"
        ></ImageView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Terminator"
        android:textSize="35sp"
        android:layout_marginTop="10sp"
        ></TextView>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem/random"
        ></TextView>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/summary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Director: Quentin Inventino"
        android:textColor="@color/soft_text"
        android:layout_marginTop="15sp"
        ></TextView>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/director"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Cast: Blas Curtis, Pamela Stuart, Brian Phillips"
        android:textColor="@color/soft_text"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>